{
  "name": "vsc-packages",
  "displayName": "Package Installer",
  "description": "Visually install packages in a similar way to VSC extensions",
  "version": "0.0.1",
  "license": "SEE LICENSE IN LICENSE.txt",
  "publisher": "sketchbuch",
  "main": "./out/extension.js",
  "icon": "logo.png",
  "activationEvents": [
    "*"
  ],
  "author": {
    "name": "sketchbuch"
  },
  "bugs": {
    "url": "https://github.com/sketchbuch/vsc-packages/issues"
  },
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vsc-packages-display-package",
        "icon": {
          "light": "./resources/light/activitybar-light.svg",
          "dark": "./resources/dark/activitybar-dark.svg"
        },
        "title": "Display Package"
      },
      {
        "command": "vsc-packages-open-npmurl",
        "icon": {
          "light": "./resources/light/activitybar-light.svg",
          "dark": "./resources/dark/activitybar-dark.svg"
        },
        "title": "Open the NPM Page for this Package"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "vsc-packages-open-npmurl",
          "group": "inline",
          "icon": {
            "light": "./resources/light/activitybar-light.svg",
            "dark": "./resources/dark/activitybar-dark.svg"
          },
          "title": "Open the NPM Page for this Package",
          "when": "view == vsc-packages-activitybar-deps && viewItem == package-list-item"
        },
        {
          "command": "vsc-packages-open-npmurl",
          "group": "inline",
          "icon": {
            "light": "./resources/light/activitybar-light.svg",
            "dark": "./resources/dark/activitybar-dark.svg"
          },
          "title": "Open the NPM Page for this Package",
          "when": "view == vsc-packages-activitybar-dev-deps && viewItem == package-list-item"
        }
      ]
    },
    "views": {
      "vsc-packages-activitybar": [
        {
          "id": "vsc-packages-activitybar-deps",
          "name": "Dependencies"
        },
        {
          "id": "vsc-packages-activitybar-dev-deps",
          "name": "Dev Dependencies"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "./resources/light/activitybar-light.svg",
          "id": "vsc-packages-activitybar",
          "title": "Packages (Node)"
        }
      ]
    }
  },
  "engines": {
    "vscode": "^1.40.0"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/sketchbuch/vsc-packages"
  },
  "scripts": {
    "audit-html": "yarn audit --json | yarn-audit-html --output audit-report.html",
    "compile": "tsc --project ./",
    "lint:prettier": "prettier --write --config ./.prettierrc.js './src/**/*.{js,ts}'",
    "lint:ts": "yarn lint:ts:src && yarn lint:ts:test",
    "lint:ts:src": "tslint --config ./tslint.json --fix './src/**/*.{js,ts}' --exclude './src/test/**/*'",
    "lint:ts:test": "tslint --config ./src/test/tslint.json --fix './src/**/*.{js,ts}' --exclude './src/test/**/*'",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "yarn run compile && node ./node_modules/vscode/bin/test",
    "vscode:prepublish": "yarn run compile",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@schemastore/package": "^0.0.5",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "@types/sinon": "^7.0.13",
    "chai": "^4.2.0",
    "prettier": "^1.19.1",
    "sinon": "^7.3.2",
    "ts-mockito": "^2.3.1",
    "ts-node": "^8.5.4",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "yarn-audit-html": "^1.1.0"
  }
}
